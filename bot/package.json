    "@types/pino": "^7.0.4",
    "pino-pretty": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "grammy": "^1.37.0",
    "inquirer": "^12.9.0",
    "ora": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "youtube-dl-exec": "^3.0.24",
    "zod": "^4.0.13"
  }
