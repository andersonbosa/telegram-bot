{
  "name": "@scope/project",
  "version": "1.0.0",
  "license": "CC0-1.0",
  "private": true,
  "bin": {
    "tgbot": "./dist/cli.js"
  },
  "scripts": {
    "dev": "LOG_LEVEL=debug tsx --watch --inspect ./src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "cli": "tsx src/cli.ts",
    "cli:dev": "tsx --watch src/cli.ts",
    "cli:build": "tsc && chmod +x dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "engines": {
    "node": ">=20.x"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@types/dotenv": "^6.1.1",
