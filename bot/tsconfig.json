{
  "extends": "@tsconfig/node20/tsconfig.json",
  "exclude": [
    "**/*.spec.*",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node"
  }
}
